	bg[disable]="ffffffff" fg[disable]="ffaca899" bd[disable]="ffe2ceee"/>

<text_view  
	bg[normal]="ffffffff" fg[normal]="ff000000" bd[normal]="ff404040"
	bg[focused]="ffffffff" fg[focused]="ff000000" bd[focused]="ffffbb00"
	bg[active]="ffffffff" fg[active]="ff000000" bd[active]="ffe2ceee"
	bg[disable]="ffffffff" fg[disable]="ffaca899" bd[disable]="ffe2ceee"/>

<check_button 
	fg[normal]="ff000000"
	fg[focused]="ffffbb00"
	fg[active]="ffffbb00"
	fg[disable]="ffaca899"/>

<radio_button 
	fg[normal]="ff000000"
	fg[focused]="ffffbb00"
	fg[active]="ffffbb00"
	fg[disable]="ffaca899"/>

<list_view bg_image[normal]="list_view_bg.png" 
