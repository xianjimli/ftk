<theme name="default">

<button bg_image[normal]="btn_default_normal.png" bg[normal]="ffd0d0d0"
	bg_image[focused]="btn_default_selected.png" bg[focused]="ffffbb00"
	bg_image[active]="btn_default_pressed.png" bg[active]="ffe2ceee"
	bg_image[disable]="btn_default_normal_disable.png" />

<progress_bar  
	bg[normal]="ff9d9e9d" fg[normal]="ffffd300"
	bg[focused]="ff9d9e9d" fg[focused]="ffffd300"
	bg[active]="ff9d9e9d" fg[active]="ffffd300"
	bg[disable]="ff9d9e9d" fg[disable]="ffffd300"/>

<entry  
	bg[normal]="ffffffff" fg[normal]="ff000000" bd[normal]="ff404040"
	bg[focused]="ffffffff" fg[focused]="ff000000" bd[focused]="ffffbb00"
